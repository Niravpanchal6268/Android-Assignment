<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Register Form"
        android:textColor="@color/black"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_text"
        android:hint="Enter Your Name"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/username_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40sp"
        android:layout_marginTop="15sp"
        android:background="@drawable/input_text"
        android:hint="User Name"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="15dp" />

    <RadioGroup
        android:id="@+id/radio_group_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_username"
        android:layout_marginHorizontal="40sp"
        android:layout_marginTop="15dp"
        android:background="@drawable/input_text"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/male_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="male"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/female_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="female"
            android:textSize="15dp" />


    </RadioGroup>

    <EditText
        android:id="@+id/phone_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40sp"
        android:layout_marginTop="15sp"
        android:background="@drawable/input_text"
        android:hint="Phone No."
        android:inputType="number"
        android:padding="10dp"
        android:textSize="15dp" />

    <SeekBar
        android:id="@+id/seekbar_id"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_text"
        android:max="100"
        android:padding="10dp" />

    <TextView
        android:id="@+id/age_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40sp"
        android:text="Age: "
        android:textColor="@color/black"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/check_school_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:text="School - College"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <CheckBox
        android:id="@+id/check_City_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_school_id"
        android:layout_marginHorizontal="40dp"
        android:text="City"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <CheckBox
        android:id="@+id/check_Villege_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_City_id"
        android:layout_marginHorizontal="40dp"
        android:text="Villege"
        android:textColor="@color/black"
        android:textSize="18dp"

        />

    <EditText
        android:id="@+id/address_id"
        android:layout_width="333dp"
        android:layout_height="79dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/input_text"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="18dp"

        />

    <Button
        android:id="@+id/register_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_address_id"
        android:layout_marginHorizontal="40sp"
        android:text="Register"
        android:textColor="@color/white" />


</LinearLayout>